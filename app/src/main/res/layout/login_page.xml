<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/android_sta"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:background="@color/mainBackground">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:src="@drawable/reply"
            android:onClick="backButton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Login"
            android:fontFamily="serif"
            android:textColor="#FF020202"
            android:textSize="20dp"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@color/mainBackground"
        android:layout_below="@+id/header">

        <ImageView
            android:id="@+id/map_icon"
            android:layout_width="121dp"
            android:layout_height="92dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/location"></ImageView>

        <TextView
            android:id="@+id/locate_me"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_below="@+id/map_icon"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="164dp"
            android:fontFamily="serif"
            android:text="LOCATE ME"
            android:textColor="#FF020202"
            android:textSize="40dp"
            android:textStyle="bold"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/logo"
        android:background="@color/mainBackground">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/txt_Phone"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:background="@drawable/edit_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mEdit_Phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_Pass"
            android:layout_below="@+id/txt_Phone"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:paddingRight="5dp"
            android:paddingLeft="10dp"
            android:background="@drawable/edit_text"
            android:hint="Password"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mEdit_Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:paddingTop="0dp"
                android:lineHeight="5dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_Login"
            android:layout_below="@id/txt_Pass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_shape_round"
            android:padding="8dp"
            android:text="LOGIN"
            android:textSize="20dp"
            android:fontFamily="serif"
            android:onClick="loginOnClick"/>
<!--        <Button-->
<!--            android:id="@+id/btn_Login"-->
<!--            android:layout_below="@+id/txt_Pass"-->
<!--            android:layout_width="150dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:layout_marginLeft="45dp"-->
<!--            android:layout_marginRight="20dp"-->
<!--            android:text="LOGIN"-->
<!--            android:layout_centerHorizontal="true"-->
<!--            android:background="#ffffff"-->
<!--            android:textColor="#FF020202"-->
<!--            android:textStyle="bold"-->
<!--            android:textSize="20dp"-->
<!--            android:onClick="loginOnClick"/>-->
        <Button
            android:id="@+id/btn_Register"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_Login"
            android:layout_centerHorizontal="true"
            android:background="#ffffff"
            android:onClick="moveToRegister"
            android:text="Register"
            android:textColor="#FF020202"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/material_text_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:text="Forgot Password ?"
            android:onClick="forgotPasswordOnClick"/>

    </RelativeLayout>
</RelativeLayout>
