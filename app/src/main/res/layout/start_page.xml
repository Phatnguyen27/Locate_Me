<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/android_sta"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/mainBackground">

        <ImageView
            android:id="@+id/map_icon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/location"></ImageView>

        <TextView
            android:id="@+id/locate_me"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_below="@+id/map_icon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="269dp"
            android:text="LOCATE ME"
            android:textColor="#FF020202"
            android:textSize="40dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/logo"
        android:background="@color/mainBackground">

        <Button
            android:id="@+id/StartP_Login_btn"
            android:background="@drawable/btn_shape_round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:text="LOGIN"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textColor="#FF020202"
            android:textSize="20dp"
            android:onClick="moveToLogin"/>

        <Button
            android:id="@+id/material_text_button1"
            android:layout_below="@+id/StartP_Login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:text="USING MAP"
            android:fontFamily="serif"
            android:background="@drawable/btn_shape_round"
            android:textColor="#FF020202"
            android:textStyle="bold"
            android:textSize="20dp" />

    </RelativeLayout>
    <TextView
        android:id="@+id/material_text_button"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:text="Share Your Life"
        android:textColor="#FF020202"/>
</RelativeLayout>
